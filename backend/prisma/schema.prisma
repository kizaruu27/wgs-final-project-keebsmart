generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id          Int             @id @default(autoincrement())
  productName String
  brand       String
  categoryId  Int
  specs       String[]
  description String
  userId      String
  isUsed      Boolean         @default(false)
  isDeleted   Boolean         @default(false)
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  createdBy   User            @relation(fields: [userId], references: [id])
  item        InventoryItem[]
  product     Products?
}

model InventoryItem {
  id            Int          @id @default(autoincrement())
  inventoryId   Int
  qty           Int
  variation     String
  variationId   Int
  isUsed        Boolean      @default(false)
  isDeleted     Boolean      @default(false)
  inventory     Inventory    @relation(fields: [inventoryId], references: [id])
  variationName Variations   @relation(fields: [variationId], references: [id])
  productItem   ProductItem?
}

model Products {
  id           Int             @id @default(autoincrement())
  productName  String
  description  String
  brand        String
  categoryId   Int
  isActive     Boolean?        @default(false)
  soldTotal    Int?            @default(0)
  specs        String[]        @db.VarChar
  inventoryId  Int?            @unique
  isDeleted    Boolean         @default(false)
  productImage ProductImage?
  productItem  ProductItem[]
  category     ProductCategory @relation(fields: [categoryId], references: [id])
  inventory    Inventory?      @relation(fields: [inventoryId], references: [id])
}

model ProductImage {
  id              Int      @id @default(autoincrement())
  productId       Int      @unique
  imagePreviewUrl String
  imageUrls       String[]
  product         Products @relation(fields: [productId], references: [id])
}

model ProductCategory {
  id           Int          @id @default(autoincrement())
  categoryName String
  inventory    Inventory[]
  products     Products[]
  variations   Variations[]
}

model ProductItem {
  id                Int              @id @default(autoincrement())
  productId         Int
  variationOptionId Int
  unitId            String           @default(cuid())
  imageURLs         String[]
  price             Int
  qty               Int
  status            String
  manufacturer      String
  sold              Int              @default(0)
  inventoryItemId   Int?             @unique
  isDeleted         Boolean          @default(false)
  Cart              Cart[]
  inventoryItem     InventoryItem?   @relation(fields: [inventoryItemId], references: [id])
  product           Products         @relation(fields: [productId], references: [id])
  variationOption   VariationOptions @relation(fields: [variationOptionId], references: [id])
}

model Variations {
  id            Int                @id @default(autoincrement())
  categoryId    Int
  variationName String
  inventoryItem InventoryItem[]
  options       VariationOptions[]
  category      ProductCategory    @relation(fields: [categoryId], references: [id])
}

model VariationOptions {
  id             Int           @id @default(autoincrement())
  variationValue String
  variationId    Int
  productItems   ProductItem[]
  variations     Variations    @relation(fields: [variationId], references: [id])
}

model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  phoneNumber String
  isActive    Boolean
  access      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  cart        Cart[]
  inventory   Inventory[]
  messeges    Messeges[]
  orders      Orders[]
  ProductLog  ProductLog[]
  shipment    Shipping[]
  userAddress UserAddress[]
}

model UserAddress {
  id        Int      @id @default(autoincrement())
  userId    String
  street    String
  kelurahan String
  kecamatan String
  city      String
  province  String
  postCode  Int
  isDefault Boolean
  orders    Orders[]
  user      User     @relation(fields: [userId], references: [id])
}

model PaymentMethods {
  id          Int      @id @default(autoincrement())
  paymentType String
  orders      Orders[]
}

model Cart {
  id            Int             @id @default(autoincrement())
  userId        String
  productItemId Int
  qty           Int
  subTotalPrice Int
  isOrdered     Boolean         @default(false)
  isDeleted     Boolean         @default(false)
  createAt      DateTime        @default(now())
  productItem   ProductItem     @relation(fields: [productItemId], references: [id])
  user          User            @relation(fields: [userId], references: [id])
  order         Orders[]        @relation("CartToOrders")
  pendingOrders PendingOrders[] @relation("CartToPendingOrders")
}

model Shipping {
  id           String   @id @default(uuid())
  shipmentName String   @default("KeebsMart Express")
  userId       String
  orderId      String   @unique
  createdAt    DateTime @default(now())
  order        Orders   @relation(fields: [orderId], references: [orderId])
  user         User     @relation(fields: [userId], references: [id])
}

model PendingOrders {
  id   Int    @id @default(autoincrement())
  cart Cart[] @relation("CartToPendingOrders")
}

model Orders {
  orderId         String          @id @default(uuid())
  userId          String
  orderDate       DateTime        @default(now())
  paymentMethodId Int
  addressId       Int
  shippingId      String?
  orderTotal      Int
  totalPrice      Int
  orderNotes      String
  updateDate      DateTime        @default(now())
  buyerName       String          @default("")
  phoneNumber     String          @default("")
  address         UserAddress     @relation(fields: [addressId], references: [id])
  paymentMethod   PaymentMethods  @relation(fields: [paymentMethodId], references: [id])
  user            User            @relation(fields: [userId], references: [id])
  shipping        Shipping?
  currentStatus   currentStatus[]
  carts           Cart[]          @relation("CartToOrders")
}

model currentStatus {
  id            Int         @id @default(autoincrement())
  updateAt      DateTime    @updatedAt
  orderStatusId Int
  orderId       String
  order         Orders      @relation(fields: [orderId], references: [orderId])
  status        orderStatus @relation(fields: [orderStatusId], references: [id])
}

model orderStatus {
  id                Int             @id @default(autoincrement())
  status            String
  statusDescription String
  currentStatus     currentStatus[]
}

model Messeges {
  id     Int    @id @default(autoincrement())
  userId String
  msg    String
  user   User   @relation(fields: [userId], references: [id])
}

model ProductLog {
  id        Int      @id @default(autoincrement())
  userId    String
  createdAt DateTime @default(now())
  process   String
  User      User     @relation(fields: [userId], references: [id])
}
